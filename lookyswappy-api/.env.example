# Lookyswappy API Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration
# ============================================
# For Docker Compose, these are used to configure PostgreSQL container
POSTGRES_USER=lookyswappy
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=lookyswappy

# Full database URL (for local development without Docker)
# DATABASE_URL=postgresql+asyncpg://lookyswappy:password@localhost:5432/lookyswappy

# ============================================
# Authentication
# ============================================
# JWT secret key - MUST be changed in production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-super-secret-key-here-change-me

# ============================================
# Application Settings
# ============================================
# Debug mode (true for development, false for production)
DEBUG=true

# CORS origins (JSON array of allowed origins)
# Development:
CORS_ORIGINS=["http://localhost:8081","http://localhost:19006","http://127.0.0.1:8081"]
# Production:
# CORS_ORIGINS=["https://lookyswappy.com"]

# ============================================
# Caddy / SSL Configuration (Production)
# ============================================
# Domain for the API
DOMAIN=api.lookyswappy.com

# Email for Let's Encrypt SSL certificates
CADDY_EMAIL=admin@lookyswappy.com
